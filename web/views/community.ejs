<%- include('header'); %>
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Community Metrics</h1>
          <p class="mb-4">Metrics available from the community</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between"">
              <h6 class="m-0 font-weight-bold text-primary">Metrics</h6>
            </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Command</th>
                        <th>Description</th>
                        <th>Units</th>
                        <th>Min</th>
                        <th>Max</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%
                        metrics.forEach((sm)=>{
                        const m = sm.metric;
                      %>
                        <tr>
                          <td><%- m.name %></td>
                          <td><%- m.command %></td>
                          <td><%- m.description %></td>
                          <td><%- m.units %></td>
                          <td><%- m.min %></td>
                          <td><%- m.max %></td>
                          <td>
                            <a href="/web/community/add/<%-sm._id%>" class="btn btn-success btn-circle btn-sm">
                                <i class="fas fa-plus"></i>
                            </a>
                            <%if(user.sub === sm.sub){%>
                            <a href="/web/community/delete/<%-sm.name%>/<%-sm.category%>" class="btn btn-danger btn-circle btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                            <%}%>
                          </td>
                      </tr>  
                      <%});%>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
        </div>
<%- include("footer"); %>